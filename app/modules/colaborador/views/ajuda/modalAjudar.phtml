                            <a href="profile.html"><img width="40px" src="/incentiv/img/ui-sherman.jpg" class="img-circle"></a>
                        </div>
                        <div class="dm-message dm-with-text">
                            <div class="dm-text">
                                <p lang="" data-aria-label-part="0" class="js-tweet-text tweet-text">{{ajuda.mensagem}}</p>
                            </div>
                            <muted><span class="moment">{{ajuda.envioDt}}</span></muted>
                            <div class="dm-caret">
                                <div class="dm-caret-outer"></div>
                                <div class="dm-caret-inner"></div>
                            </div>
                        </div>
                    </div>
                </div>
