<section class=" tasks-widget">
        <div class="task-content">
            <div id="mensagem-modal-resposta-ideias"><?php echo $this->flashSession->output(); ?></div>
            <ul class="task-list ui-sortable-modal ul-ideias" id="sortable" >
                {% for ideia in ideias %}
                <li class="list-primary" id="li_ideia_{{ideia.id}}">
                    <div class="task-title">
                        <span class="task-title-sp">{{ideia.descricao}}</span>
                    </div><br/>
                    <div class="task-title pull-left">
                        <span class="sp-title moment">Enviada em: {{ date('d/m/Y', ideia.criacaoDt) }}</span>
                    </div>
                    <div id={{ideia.id}} class="task-title pull-right">
                        {%if(ideia.criacaoDt != '' AND ideia.resposta == '' )%}
                            <span class="badge bg-important">Aguardando Aprovação</span>
                        {%elseif(ideia.resposta == "Y")%}
                            <span class="badge bg-info">Parabéns!!! Ideia aprovada</span>
                        {%endif%}
                    </div>
                </li>
                {% elsefor %}
                <li class="list-primary text-center">
                    <div class="task-title">
                        <span class="task-title-sp">Nenhuma ideia no momento!!!</span>
                    </div>
                </li>
                {% endfor %}
            </ul>
            <ul class="task-list ui-sortable-modal" id="ul_ideia" style="display: none">
                <li class="list-primary" >
                    <div class="task-title inline"> 
                        <form role="form" class="form-ideia" id="form-ideia">
                             <div>
                                 <textarea id="txt_ideia" name="txt_ideia" placeholder="Envie sua ideia e seja reconhecido pela empresa!!!" class="form-control"></textarea>
                            </div>
                       </form>
                    </div><br/>
                    <div class="task-title pull-right">
                        <button type="button" id="btnSalvarIdeia" class="btn btn-xs btn-theme03">Enviar</button>
                        <button type="button" id="btnCancelarIdeia" class="btn btn-xs btn-theme04">Cancelar</button>
                    </div>
                </li>
            </ul>
    </div>
</section>
{{ javascript_include('js/colaborador/ideia/modal-ideias.js') }}
<script type="text/javascript">  
    $(document).ready(function(){
        ModalIdeias.init();
    });   
</script>