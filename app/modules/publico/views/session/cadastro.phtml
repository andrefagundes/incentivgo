<section class="components">
    <div class="container margin">
        <div class="row col-sm-offset-4">
            
                <h6>{{lang['pre_cadastro_1']}}<p>{{lang['pre_cadastro_2']}}</p></h6>               
                {{ form( 'class':'form-horizontal form-cadastro','role': 'form') }}
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('nome') }}
                        {{ form.messages('nome') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('email') }}
                        {{ form.messages('email') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('telefone') }}
                        {{ form.messages('telefone') }}
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ link_to("corporation", 'class':'btn btn-link', lang['possui_cadastro']) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('go') }}
                    </div>
                </div>
                {{ form.render('csrf') }}
                {{ form.messages('csrf') }}
            </form>
        </div>
    </div>
</section>
