<section class="components">
    <div class="container margin">
        
        <div class="row col-sm-offset-4 col-lg-offset-4">
            
            {{ form('class': 'form-horizontal form-login','role': 'form') }}
            <div class="form-group">
                <div class="col-sm-5 col-lg-5">
                    {{ link_to("session/enviarSugestao", 'class':'btn btn-link',
                    "Sua empresa não está no combo abaixo?<p> Envie uma sugestão para participar!!!</p>") }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5 col-lg-5">
                    {{ content() }}
                </div>
            </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('empresaId') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('email') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('password') }}
                        {{ form.messages('password') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ link_to("session/esqueceuSenha", 'class':'btn btn-link', "Esqueceu a senha?") }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('go') }}
                        {{ form.render('remember') }}
                            {{ form.label('remember') }}
                    </div>
                </div>
                {{ form.render('csrf') }}
            </form>
        </div>
    </div>
</section>