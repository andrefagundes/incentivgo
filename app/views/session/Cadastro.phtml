<section class="components">
    <div class="container margin">
        <div class="row col-offset-4">
            <h6><strong>Faça seu cadastro </strong></h6>               
                {{ form( 'class':'form-horizontal form-cadastro','role': 'form') }}
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ content() }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('instituicaoId') }}
                        {{ form.messages('instituicaoId') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('nome') }}
                        {{ form.messages('nome') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('email') }}
                        {{ form.messages('email') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('matricula') }}
                        {{ form.messages('matricula') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('confirmMatricula') }}
                        {{ form.messages('confirmMatricula') }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ link_to("session/login", 'class':'btn btn-link', "Já possui cadastro?") }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-5 col-lg-5">
                        {{ form.render('go') }}
                        {{ form.render('terms') }} {{ form.label('terms') }}
                        {{ form.messages('terms') }}
                    </div>
                </div>
                {{ form.render('csrf') }}
                {{ form.messages('csrf') }}
            </form>
        </div>
    </div>
</section>