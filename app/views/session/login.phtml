<section class="components">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-offset-4 margin">
                <div class="row">
                    <h6><strong>Bem vindo.</strong></h6>
                    {{ form('class': 'form-horizontal form-login','role': 'form') }}
                        <div class="form-group">
                            <div class="col-sm-8">
                                {{ form.render('email') }}
                                {{ form.messages('email') }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8">
                                {{ form.render('password') }}
                                {{ form.messages('password') }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8">
                                {{ link_to("session/esqueceuSenha", 'class':'btn btn-link', "Esqueceu a senha?") }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8">
                                {{ form.render('go') }}
                            </div>
                        </div>
                    
                        {{ form.render('csrf') }}
                        {{ form.messages('csrf') }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>